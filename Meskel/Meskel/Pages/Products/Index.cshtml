@page
@model Meskel.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <h1>Our Products</h1>


<table class="table">
    
    <tbody>
        <div id="carousel-example" class="carousel slide hidden-xs" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @foreach (var pageIndex in Enumerable.Range(0, (Model.Product.Count() - 1) ))
                {
                    <div class="item@(pageIndex == 0 ? " active" : "")">
                        <div class="row">
                            <form asp-page-handler="Add">
                                @foreach (var pp in Model.Product.Skip(pageIndex * 4).Take(4))
                                {
                                    <div class="col-sm-3">
                                        <div class="col-item">
                                            <div class="photo">
                                                <a href="/Products/Details?id=@pp.Id">
                                                    <img src="~/images/@pp.pp_image" class="img-responsive" alt="a" width="270" height="360" /></a>
                                                    <a asp-page="Detail" asp-all-route-productDetails=@pp.Id>Details</a>
                                            </div>
                                            <div class="info">
                                                <div class="row">
                                                    <div class="price col-md-6">
                                                        <h5 class="truncate">
                                                            @pp.Color
                                                        </h5>
                                                        <h5 class="price-line">
                                                            $<span class="price-text-color">@pp.Price</span>
                                                        </h5>
                                                    </div>
                                                </div>
                                                <div class="clearfix">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>

    </tbody>
</table>
